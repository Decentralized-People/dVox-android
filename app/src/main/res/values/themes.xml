<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectDIES" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Login theme. -->
    <style name="LoginTheme.ProjectDIES" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/BlackColor</item>
        <item name="colorPrimary">@color/BlackColor</item>
        <item name="colorOnPrimary">@color/WhiteColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/GreyColor</item>
        <item name="colorSecondaryVariant">@color/DarkGreyColor</item>
        <item name="colorOnSecondary">@color/BlackColor</item>
        <!-- Color accent color -->
        <item name="colorAccent">@color/BlackColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/BlackColor</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/BlackColor</item>
        <!-- Disable title and action bar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>